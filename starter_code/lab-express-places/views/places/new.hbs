<header class="subheader">
	<h2>{{Subtitle}}</h2>
</header>

<section class="container">
	<form class="form" action="/places/new" method="POST">
		<div class="form-group">	
			<label for="name">Name:</label>
			<input class="form-control" type="text" name="name" id="name" placeholder="Name *">
		</div>

		<div class="form-group">	
			<label for="kind">Kind:</label>
			<select name="kind" id="kind">
				<option selected disabled>Select an Option</option>
				<option value="Bookstore">Bookstore</option>
				<option value="Coffee-place">Coffee place</option>
			</select>
		</div>
		
	
		<div class="form-group">
			<legend>Location:</legend>
			<label for="lat-pos">Latitude</label>
			<input class="form-control" type="text" name="latitude" id="lat-pos" placeholder="Latitude *">
			<label for="lng-pos">Longitude</label>
			<input class="form-control" type="text" name="longitude" id="lng-pos" placeholder="Longitude *">
		</div>

		<div class="form-group">
			<button type="submit" class="primary-btn" role="button">Create Marker</button>
		</div>
	</form>

	{{!-- Google Map --}}
	<div class="map" id="map"></div>
</section>
